<!DOCTYPE html>
<html lang="es">
<head>
    @await Html.PartialAsync("~/Views/Utilities/Utilities.cshtml")
    <title>Formulario de Registro</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="login-form card p-4">
            <h2 class="text-center">ToDo&nbsp;<i class="fa-regular fa-circle-check"></i></h2>
            <form class="inputCredentials" action="/UserRegister" method="post">
                <div class="form-group">
                    <input type="text" id="username" name="username" class="form-control" placeholder="Nombre de usuario" required>
                </div>
                <div class="form-group">
                    <input id="password" type="password" name="password" class="form-control" placeholder="Contraseña" required>
                </div>
                <div class="form-group">
                    <input id="password_c" type="password" name="password" class="form-control" placeholder="Confirmar Contraseña" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
            </form>
            <label><a href="/">Ya tengo una cuenta</a></label>
        </div>
    </div>


    <div class="modal" id="alertModal" tabindex="-1" aria-labelledby="alertModalLabel" aria-hidden="true" style="font-family:'Urbanist' ">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="color:#007bff;display: flex;align-items: center;justify-content: flex-start">
                    <i class="fa-regular fa-circle-check"></i>&nbsp;
                    <h5 class="modal-title" id="alertModalLabel"></h5>
                </div>
                <div class="modal-body" id="alertMessage" style="color:#003785;font-weight:500">
                </div>
            </div>
        </div>
    </div>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/Register.js" type="module"></script>
</body>
</html>
